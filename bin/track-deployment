#!/usr/bin/env php
<?php

$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
    __DIR__ . /../autoload.php,
];

if ( ! class_exists('AppDeploymentTracker\Tracker')) {

    foreach ($autoloadPaths as $path) {
        if (file_exists($path)) {
            require_once $path;
            break;
        }
    }

}

use AppDeploymentTracker\Tracker;

Tracker::track();